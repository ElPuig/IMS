<odoo>
    <data>
        <record model="ir.ui.view" id="view_attendance_session_list">
            <field name="name">ims.attendance_session.list</field>
            <field name="model">ims.attendance_session</field>
            <field name="arch" type="xml">
                <list>                    
                    <field name="date" width="125px"/>                    
                    <field name="session_teacher_id" width="250px"/>
                    <field name="group_id" width="125px"/>
                    <field name="subject_id"/>
                    <field name="weekday" width="125px"/>
                    <field name="start_time" widget="float_time" width="125px"/>
                    <field name="end_time" widget="float_time" width="125px"/>
                </list>
            </field>
        </record>   
    </data>
</odoo>